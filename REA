#include <iostream>
using namespace std;
int main(){
char edad;
  cout << "mete la letra correspondiente a tu edad.\n"
        "(A) menor a 17 años. \n"
        "(B) enter 18 y 67 años\n"
        "(C) mayor a 67 años\n" << endl;
  cin >> edad;

  cout << "tu boleto costará: ";
  switch (edad){
    case 'A': cout << "5 pesos";
    break;
    case 'B': cout << "50 pesos";
    break;
    case 'C': cout << "5 pesos";
    break;
    default: cout << "Tu respuesta es inválida, introduce tu edad,";
    break;
  }

return 0;
}
